#!/user/bin/env ruby

this_dir = File.dirname(__FILE__)
lib_dir  = File.join(this_dir,  '..', 'lib')
$LOAD_PATH.unshift(lib_dir) unless $LOAD_PATH.include?(lib_dir)

driver_data = ARGV[0]

if driver_data.nil?
  puts <<-HEREDOC
    Please provide path to driver data.
    \t./bin/root-driving-history DRIVER_DATA
  HEREDOC

  exit
end
